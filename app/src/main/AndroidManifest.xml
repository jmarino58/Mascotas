<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mascotas">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:label="Mis mascotas favoritas"
            android:name="com.mascotas.MascotasFavoritas"
            android:parentActivityName="com.mascotas.ListaMascotas" />
        <activity
            android:label="Lista de mascotas"
            android:name="com.mascotas.ListaMascotas"
            android:parentActivityName="com.mascotas.MainActivity" />
        <activity android:name="com.mascotas.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>